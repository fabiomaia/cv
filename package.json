{
  "name": "fabiomaia.pt",
  "devDependencies": {
    "gh-pages": "^0.8.0",
    "handlebars": "^4.0.5",
    "metalsmith": "^2.1.0",
    "metalsmith-collections": "^0.7.0",
    "metalsmith-layouts": "^1.4.2",
    "metalsmith-markdown": "^0.2.1",
    "metalsmith-permalinks": "^0.4.1",
    "metalsmith-prism": "^2.1.1",
    "node-sass": "^3.4.2",
    "normalize.css": "^3.0.3",
    "npm-check-updates": "^2.5.6",
    "inuit-defaults": "~0.2.3",
    "inuit-functions": "~0.2.0",
    "inuit-mixins": "~0.2.3",
    "inuit-box-sizing": "~0.2.0",
    "inuit-normalize": "~3.0.3",
    "inuit-page": "~0.2.1",
    "inuit-responsive-tools": "~0.1.3",
    "inuit-buttons": "~0.4.2",
    "inuit-clearfix": "~0.2.2",
    "inuit-layout": "~0.2.2",
    "font-awesome": "^4.4.0"
  },
  "scripts": {
    "build-metalsmith": "node metalsmith.js",
    "build-styles": "node-sass --output-style=compressed src/assets/styles/main.scss dest/assets/styles/main.css",
    "build-images": "mkdir -p dest/assets/images/ && cp -r src/assets/images dest/assets/",
    "build-fonts": "mkdir -p dest/assets/fonts/ && cp -r node_modules/font-awesome/fonts dest/assets/",
    "prebuild": "rm -rf dest",
    "build": "npm run build-metalsmith && npm run build-images && npm run build-styles && npm run build-fonts",
    "update-dependencies": "ncu -u && git add package.json && git commit -m 'Update dependencies'",
    "predeploy": "npm run build",
    "deploy": "git push origin `git subtree split --prefix dest master`:gh-pages --force",
    "postdeploy": "echo 'deployed!'"
  }
}
