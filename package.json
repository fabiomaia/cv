{
    "name": "fabiomaia.pt",
    "devDependencies": {
        "gh-pages": "^0.8.0",
        "handlebars": "^4.0.5",
        "metalsmith": "^2.1.0",
        "metalsmith-collections": "^0.7.0",
        "metalsmith-layouts": "^1.4.2",
        "metalsmith-markdown": "^0.2.1",
        "metalsmith-permalinks": "^0.4.1",
        "metalsmith-prism": "^2.1.1",
        "normalize.css": "^3.0.3",
        "npm-check-updates": "^2.5.6",
        "rimraf": "^2.5.0"
    },
    "scripts": {
        "build-metalsmith": "node metalsmith.js",
        "build-styles": "echo 'building styles'",
        "build": "npm run build-metalsmith && npm run build-styles",
        "postbuild": "echo 'watching for changes'",

        "update-dependencies": "ncu -u && git add package.json && git commit -m 'Update dependencies'",

        "predeploy": "npm run build",
        "deploy": "gh-pages -d dest -b gh-pages",
        "postdeploy": "rimraf dest"
    }
}
